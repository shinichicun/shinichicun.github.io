---
interface Props {
  l: string; // left image
  r: string; // right image
  rightAlt?: string;
  leftAlt?: string;
}

const { l, r, rightAlt = "Right image", leftAlt = "Left image" } = Astro.props;
---

<div class="not-prose diff aspect-[16/9] rounded-lg overflow-hidden fade-in-up">
  <div class="diff-item-1">
    <img alt={rightAlt} src={r} loading="lazy" />
  </div>
  <div class="diff-item-2">
    <img alt={leftAlt} src={l} loading="lazy" />
  </div>
  <div class="diff-resizer"></div>
</div>
